{
  "name": "ropm",
  "version": "0.4.0",
  "description": "",
  "scripts": {
    "preversion": "npm run build && npm run lint && npm run test",
    "build": "tsc",
    "lint": "eslint \"src/**\"",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": ">=8.1.10"
  },
  "engineStrict": true,
  "main": "dist/cli.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "ropm": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "author": "Bronley Plumb",
  "license": "MIT",
  "dependencies": {
    "@types/semver": "^7.3.1",
    "@xml-tools/ast": "^5.0.0",
    "@xml-tools/parser": "^1.0.7",
    "del": "^5.1.0",
    "fs-extra": "^9.0.1",
    "glob-all": "^3.2.1",
    "latinize": "^0.4.1",
    "npm-packlist": "^2.1.2",
    "roku-deploy": "^3.2.2",
    "semver": "^7.3.2",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/latinize": "^0.2.15",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.22",
    "@types/npm-packlist": "^1.1.1",
    "@types/sinon": "^9.0.4",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "timeout": 20000,
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
